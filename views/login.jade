extends layout
block content
  link(rel='stylesheet', href='/stylesheets/login.css')
  .container
    form.form-signin(action="/login",method="post")
      h2.form-signin-heading 请登录
      label.sr-only(for="inputEmail") 邮箱地址
      input#inputEmail.form-control(name="Ulogn",type="email",placeholder="邮箱地址",required,autofocus)
      label.sr-only(for="inputPassword") 密码
      input#inputPassword.form-control(name="Upasswd",type="password",placeholder="密码",required)
      .checkbox
        label 
          input(type="checkbox",value="remember-me")
          | 记住帐号
      button.btn.btn-lg.btn-primary.btn-block(type="submit") Sign in
      p 如果尚未注册请<a href="/register">注册</a>
  
